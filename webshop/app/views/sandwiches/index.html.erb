<p id="notice"><%= notice %></p>

<h1>Sandwiches</h1>

<table>
  <thead>
    <tr>
      <th>Bread type</th>
      <th>Toppings</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @sandwiches.each do |sandwich| %>
      <tr class="<%= cycle('tr_odd', 'tr_even') %>">
        <td><%= sandwich.breadtype.name %>
        </td>
        <td>
          <% sandwich.ingredients.each do |ingredient| %>
            <%= ingredient.name %>
          <% end %>
        </td>
        <td><%= link_to 'Show', sandwich %></td>
        <td><%= link_to 'Edit', edit_sandwich_path(sandwich) %></td>
        <td><%= link_to 'Destroy', sandwich, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sandwich', new_sandwich_path %>
